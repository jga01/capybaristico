<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Define a property for the log directory -->
    <property name="LOGS" value="./logs" />

    <!-- Appender to log to the console -->
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</Pattern>
        </layout>
    </appender>

    <!-- Appender to log to a rolling file -->
    <appender name="GameFluxFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS}/backend-game-flux.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!-- Pattern: Timestamp, Level, LoggerName, Thread, Message, Newline -->
            <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</Pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Rollover daily and when the file size reaches 10 MB -->
            <fileNamePattern>${LOGS}/archived/backend-game-flux-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>
    
    <!-- Default root logger level (for Spring framework logs, etc.) -->
    <root level="info">
        <appender-ref ref="Console" />
        <appender-ref ref="GameFluxFile" />
    </root>

    <!-- Specific logger for your application. This is the key change. -->
    <!-- We set it to TRACE to capture EVERYTHING. -->
    <logger name="com.jamestiago.capycards" level="TRACE" additivity="false">
        <appender-ref ref="GameFluxFile" />
        <appender-ref ref="Console" />
    </logger>

</configuration>